<div class="form-div">
  <form class="form-form" method="post" action="/users/login" name="login">
    <label for="email">Email:</label>
    <input class="input-in-form" id="email" name="email" type="email">

    <label for="password" class="block mar-b-1">Password:</label>
    <input class="input-in-form" id="password" required id="password" name="password" type="password">

