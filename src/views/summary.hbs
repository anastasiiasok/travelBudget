<div class="container">

  <h2>
    <div class="row">
      <div class="card-panel green lighten-3">Here is your {{trip.name}} trip summary</div>
    </div>
  </h2>

  <div class="row">

    <div class="col s12">
      <h3 class="useraccount">Here's what you did on this journey:</h3>
    </div>
  </div>

  {{#each allCategories}}
  <div class="row">

    <div class="col s12">
      <h4>
        <a class="big fancy-text light-link">{{this.name}}</a> <br />
      </h4>
    </div>
  </div>

  {{/each}}
  <div class="row">

    <div class="col s12">
      </br>
      <h3 class="useraccount">Your friends on this journey were:</h3> </br>
    </div>
  </div>

  {{#each resultNames}}
  <div class="row">

    <div class="col s12">
      <h4>
        <a class="big fancy-text light-link">{{this}}</a> <br />
      </h4>
    </div>
  </div>
  {{/each}}
  <div class="row">

    <div class="col s12">
      </br>
      <h3 class="useraccount">This is how much money you and your friends spent during the whole trip:</h3> </br>
    </div>
  </div>

  {{#each resulCostArr}}
  <div class="row">

    <div class="col s12">
      <h4>
        <div class="row">
          <a>{{this.name}} spent {{this.cost}} USD</a>
          <progress value="{{this.cost}}" max="{{../maxSumObj.cost}}">
          </progress>
        </div>
      </h4>
    </div>
  </div>
  {{/each}}


  <form name="mailForm" method="POST" action="/mail" id="mailForm">
    <button id="sendMailBtn" formaction="/mail" formmethod="post"
      class="waves-effect waves-light btn-large nav-wrapper green lighten-3" type="submit" value="Pay castomize">Send
      report by email</button>
  </form>

  <br />

</div>

